@model Acc.Api.Models.Dto.View.AccountRegisterDto

@{
    ViewBag.Title = "Create Account";
    Layout = "_Layout";
}


<div class="mt-5 md:col-span-2 md:mt-0">
    <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full" action="RegisterAccount" method="post">
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
                Name
            </label>
            <input  id="name" type="text" placeholder="Enter Account Name" autocomplete="name" name="Name"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        
         <div class="flex items-center justify-between">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                 Register Account
                </button>
         </div>
    </form>
    <p class="text-center text-gray-500 text-xs">
        &copy;2023 Ojas Tech. All rights reserved.
    </p>
</div>